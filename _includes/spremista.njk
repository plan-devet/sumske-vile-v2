{% import "snipets.njk" as snipet %}

{% macro row(item) %}
<tr>
  <td class="text-nowrap">
    <a href="#" data-bs-toggle="modal" data-bs-target="#{{ item.id | modal }}">
      {{ item.id }}
    </a>
  </td>
  <td class="text-nowrap text-center">{{ item.povrsina | numeric }}</td>
  <td class="text-nowrap text-center">{{ snipet.email("Upit za spremište " + item.id) }}</td>
</tr>
{% endmacro %}

<hr class="mt-5 mb-3">
<h2 id="spremista">
    <i class="bi-boxes"></i>
    Spremišta
</h2>
<div class="table-responsive-md" style="max-width: 250px">
    <table class="table table-hover table-bordered">
        <thead class="table-bordered table-light">
            <tr>
                <th scope="col">spremište</th>
                <th class="text-center" scope="col">površina</th>
                <th class="text-center" scope="col">&nbsp</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            {% for item in spremista %}
                {{ row(item) }}
            {% endfor %}
        </tbody>
    </table>
</div>
