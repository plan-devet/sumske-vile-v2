{% import "snipets.njk" as snipet %}

{% macro row(item) %}
<tr>
  <td class="text-nowrap">
    <a href="#" data-bs-toggle="modal" data-bs-target="#{{ item.id | modal }}">
      {{ item.id }}
    </a>
  </td>
  <td class="text-center">{{ item.povrsina | numeric }}</td>
  <td class="text-center">{{ snipet.email("Upit za spremište " + item.id) }}</td>
</tr>
{% endmacro %}

<hr class="mt-5 mb-3">
