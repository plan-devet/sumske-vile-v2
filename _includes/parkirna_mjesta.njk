{% import "snipets.njk" as snipet %}

{% macro row(item) %}
<tr>
  <td class="text-nowrap">
    <a href="#" data-bs-toggle="modal" data-bs-target="#{{ item.id | modal }}">
      {{ item.id }}
    </a>
  </td>
  <td class="text-nowrap text-center">{{ item.id | idToTip }}</td>
  <td class="text-nowrap text-center">{{ item.povrsina | numeric }}</td>
  <td class="text-nowrap text-center">{{ snipet.email("Upit za parkirno mjesto " + item.id) }}</td>
</tr>
{% endmacro %}

<hr class="mt-5 mb-3">
<h2 id="parkirna-mjesta" class="section">
    <i class="bi-p-square"></i>
    Parkirna mjesta
</h2>
<div class="table-responsive-md" style="max-width: 450px">
    <table class="table table-hover table-bordered">
        <thead class="table-bordered table-light">
            <tr>
                <th scope="col">mjesto</th>
                <th class="text-center" scope="col">tip</th>
                <th class="text-center" scope="col">površina</th>
                <!--
                     <th class="text-center" scope="col">cijena</th>
                -->
                <th class="text-center" scope="col">&nbsp</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            {% for item in parkirnaMjesta %}
                {{ row(item) }}
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="modal" tabindex="-1" id="modal-parking" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Parkirna mjesta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body container-xl">
                <div class="row">
                    <div class="col p-2">
                        <div class="card border-secondary">
                            <div class="card-body">
                                <img class="card-img-top" src="images/parkings.png">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" id="modal-spremiste" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Spremišta i gražna mjesta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body container-xl">
                <div class="row">
                    <div class="col p-2">
                        <div class="card border-secondary">
                            <div class="card-body">
                                <img class="card-img-top" src="images/warehouses.png">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
        </div>
    </div>
</div>
