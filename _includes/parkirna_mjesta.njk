{% import "snipets.njk" as snipet %}

{% macro row(item) %}
<tr>
  <td class="text-nowrap">
    <a href="#" data-bs-toggle="modal" data-bs-target="#{{ item.id | modal }}">
      {{ item.id }}
    </a>
  </td>
  <td class="text-center">{{ item.tip }}</td>
  <td class="text-center">{{ item.povrsina | numeric }}</td>
  <td class="text-center">{{ snipet.email("Upit za parkirno mjesto " + item.id) }}</td>
</tr>
{% endmacro %}

<hr class="mt-5 mb-3">
<h2 id="parkirna-mjesta" class="section">
    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="svg-icon" viewBox="0 0 16 16">
        <path d="M5.5 4.002h2.962C10.045 4.002 11 5.104 11 6.586c0 1.494-.967 2.578-2.55 2.578H6.784V12H5.5V4.002Zm2.77 4.072c.893 0 1.419-.545 1.419-1.488s-.526-1.482-1.42-1.482H6.778v2.97H8.27Z"/>
        <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2Zm15 0a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2Z"/>
    </svg>
    Parkirna mjesta</h2>
<div class="table-responsive-md" style="max-width: 450px">
    <table class="table table-hover table-bordered">
        <thead class="table-bordered table-light">
            <tr>
                <th scope="col">mjesto</th>
                <th class="text-center" scope="col">tip</th>
                <th class="text-center" scope="col">površina</th>
                <!--
                     <th class="text-center" scope="col">cijena</th>
                -->
                <th class="text-center" scope="col">&nbsp</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            {% for item in parkirnaMjesta %}
                {{ row(item) }}
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="modal" tabindex="-1" id="modal-parking" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Parkirna mjesta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body container-xl">
                <div class="row">
                    <div class="col p-2">
                        <div class="card border-secondary">
                            <div class="card-body">
                                <img class="card-img-top" src="images/parkings.png">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" id="modal-spremiste" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Spremišta i gražna mjesta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body container-xl">
                <div class="row">
                    <div class="col p-2">
                        <div class="card border-secondary">
                            <div class="card-body">
                                <img class="card-img-top" src="images/warehouses.png">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
        </div>
    </div>
</div>
